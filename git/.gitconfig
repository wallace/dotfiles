[user]
	name = Jonathan R. Wallace
	email = jonathan.wallace@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
[alias]
	ds = diff --staged --color-moved
	st = status
	ci = commit -v
	co = checkout
	br = !git checkout $(git branch | cut -c 3- | awk '{print $1}' | fzf +m --preview 'git show --color=always {}')
	ctags = !.git/hooks/ctags
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --color-moved
	pr = !sh -c 'git log $0..next-release --ancestry-path --merges --oneline | tail -1'
	find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
	show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = delta --light
	editor = vim
[apply]
	whitespace = nowarn
[pack]
	threads = 0
[diff]
	renamelimit = 0
	compaction-heuristic = true
	noprefix = true
[github]
	user = wallace
	;token = <token_here>

[init]
	templatedir = ~/.git_template
[rerere]
	enabled = true
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "meld"]
  cmd = $HOME/bin/meldmerge $BASE $LOCAL $REMOTE $MERGED
[push]
	default = simple
[pull]
  default = current
	rebase = merges
[hub]
  protocol = ssh
[rebase]
	autostash = true
	autosquash = true
[stash]
	showPatch = true
[includeIf "gitdir:/Users"]
  path = ~/.gitconfig-mac
[includeIf "gitdir:/home"]
  path = ~/.gitconfig-linux
[include]
  path = ~/.dotoverrides/gitconfig
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
